
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products and banners
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes
    }

    match /heroBanners/{bannerId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes
    }

    // Allow anyone to create an order (e.g., from the checkout page)
    // but prevent them from reading, updating, or deleting other orders.
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
