
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to products and banners
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Or restrict to admins
    }

    match /heroBanners/{bannerId} {
      allow read: if true;
      allow write: if false; // Or restrict to admins
    }

    // Allow read/write access to settings for authenticated users (admins)
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
