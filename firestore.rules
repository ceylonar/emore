rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products and banners
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Should only be updatable from a trusted admin environment
    }
    
    match /heroBanners/{bannerId} {
      allow read: if true;
      allow write: if false; // Should only be updatable from a trusted admin environment
    }

    // Allow public read for settings, but no client-side writes.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false; // Should only be updatable from a trusted admin environment
    }
    
    // Disallow all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}