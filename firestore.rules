rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to products and banners for the storefront
    match /products/{productId} {
      allow read: if true;
      allow write: if true; // Allow server-side actions to update stock
    }

    match /heroBanners/{bannerId} {
      allow read: if true;
      allow write: if true; // Allow admin to manage banners
    }

    // Allow anyone to create an order, but only server/admin can update/delete
    match /orders/{orderId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if true; // Allow server-side actions to update status
    }
    
    // Allow reading settings but not writing from client
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false; // Should be managed from backend/console
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}