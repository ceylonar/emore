rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read for products, but no client-side writes.
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow public read for banners, but no client-side writes.
    match /heroBanners/{bannerId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow clients to create orders, and allow public reads for the admin panel.
    // Updates and deletes are blocked on the client and must go through server actions.
    match /orders/{orderId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }

    // Allow public read for settings, but no client-side writes.
    match /settings/{settingId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
